{
    "name": "mailcampaigns/shopware-6-abandoned-cart-plugin",
    "description": "A Shopware 6 plugin for \"abandoned\" carts.",
    "type": "shopware-platform-plugin",
    "license": "MIT",
    "authors": [
        {
            "name": "MailCampaigns"
        }
    ],
    "require": {
        "php": "~8.1.0 || ~8.2.0",
        "ext-json": "*",
        "shopware/core": "^6.4"
    },
    "extra": {
        "shopware-plugin-class": "MailCampaigns\\AbandonedCart\\MailCampaignsAbandonedCart",
        "plugin-icon": "src/Resources/config/plugin.png",
        "label": {
            "en-GB": "MailCampaigns - \"Abandoned\" cart"
        },
        "description": {
            "en-GB": "CRUD operations for \"abandoned\" carts."
        }
    },
    "autoload": {
        "psr-4": {
            "MailCampaigns\\AbandonedCart\\": "src/"
        }
    },
    "config": {
        "allow-plugins": {
            "symfony/runtime": true
        }
    }
}
